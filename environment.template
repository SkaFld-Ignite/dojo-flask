# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@db-cluster-url/database_name
POSTGRES_DB=video_chaptering
POSTGRES_USER=doadmin
POSTGRES_PASSWORD=your-database-password

# Redis Configuration
REDIS_URL=redis://redis-cluster-url:25061

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# File Storage
UPLOAD_FOLDER=/app/storage/uploads
PROCESSED_FOLDER=/app/storage/processed
MODEL_CACHE_DIR=/app/models
MAX_CONTENT_LENGTH=500MB

# AI Model Configuration
WHISPER_MODEL=base
LLM_MODEL=microsoft/DialoGPT-medium
USE_GPU=false
DEVICE=cpu

# Celery Configuration
CELERY_BROKER_URL=redis://redis-cluster-url:25061/0
CELERY_RESULT_BACKEND=redis://redis-cluster-url:25061/0

# DigitalOcean Spaces (S3-compatible storage)
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_ACCESS_KEY=your-access-key
DO_SPACES_SECRET_KEY=your-secret-key
DO_SPACES_REGION=nyc3

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# WebSocket Configuration
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here 